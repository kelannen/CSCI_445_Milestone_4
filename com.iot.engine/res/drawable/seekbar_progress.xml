<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5.0dip" />
            <gradient android:startColor="@color/softGray" android:endColor="@color/softGray" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/softGray" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimary" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/colorPrimary" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress" android:drawable="@drawable/seekbar_progress_bg" />
</layer-list>